<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerInParent="true"
    android:id="@+id/ratingScreenMainLayout"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/ratingScreen1Lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ratingScreen1"
        android:textSize="35sp"
        android:textColor="#FFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/ratingScreen1Lbl"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">



        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lonely"
                android:id="@+id/lonely"
                android:layout_column="3"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashamed"
                android:id="@+id/ashamed"
                android:layout_column="6"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guilty"
                android:id="@+id/guilty"
                android:layout_column="3"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disgusted"
                android:id="@+id/disgusted"
                android:layout_column="3"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angry"
                android:id="@+id/angry"
                android:layout_column="6"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anxious"
                android:id="@+id/anxious"
                android:layout_column="7"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afraid"
                android:id="@+id/afraid"
                android:layout_column="3"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad"
                android:id="@+id/sad"
                android:layout_column="6"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depressed"
                android:id="@+id/depressed"
                android:layout_column="7"
                android:background="#00FF33"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="feelingClick"/>
        </TableRow>
    </TableLayout>



    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:id="@+id/okay"
            android:layout_gravity="center_vertical"
            android:background="#00FF33"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="feelingClick"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Happy"
            android:id="@+id/happy"
            android:layout_gravity="center_vertical"
            android:background="#00FF33"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="feelingClick"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ratingScreen1Lb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ratingScreen2"
        android:textSize="35sp"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/tableLayout"
        android:layout_alignEnd="@+id/tableLayout" />


    <AbsoluteLayout
        android:id="@+id/urgeFrameView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ratingScreen1Lb2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/done">

        <ImageView
            android:id="@+id/mesurmentView"
            android:layout_marginRight="20dp"
            android:background="#ff0000"
            android:layout_width="30dp"
            android:layout_height="35dp">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thermometer"
            android:src="@drawable/thermometer"
            android:layout_alignTop="@+id/done"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top" />


    </AbsoluteLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="activityPress"/>


</RelativeLayout>
